{
  "name": "chat-heimerdinger",
  "version": "0.1.10",
  "description": "Bridge IM tools (Slack/Lark) with Claude Code for vibe coding",
  "type": "module",
  "bin": {
    "hmdg": "./dist/cli.js"
  },
  "main": "./dist/cli.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build ./src/cli.ts --outdir ./dist --target node && bun build ./src/services/daemon-entry.ts --outdir ./dist --target node && sed -i '' '1s|#!/usr/bin/env bun|#!/usr/bin/env node|' ./dist/cli.js ./dist/daemon-entry.js && chmod +x ./dist/cli.js",
    "test": "bun test",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "format": "biome format . --write",
    "prepublishOnly": "npm run build",
    "release": "npm version patch && npm publish --registry https://registry.npmjs.org --access public"
  },
  "dependencies": {
    "@clack/prompts": "^0.9.1",
    "@larksuiteoapi/node-sdk": "^1.56.1",
    "@slack/bolt": "^4.1.0",
    "commander": "^13.0.0",
    "conf": "^13.0.1",
    "consola": "^3.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "claude",
    "claude-code",
    "slack",
    "lark",
    "ai",
    "coding",
    "cli"
  ],
  "author": "Pengpeng",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/a1245582339/chat-heimerdinger.git"
  },
  "homepage": "https://github.com/a1245582339/chat-heimerdinger#readme",
  "bugs": {
    "url": "https://github.com/a1245582339/chat-heimerdinger/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
